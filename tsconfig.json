{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": ["es2020", "dom"],  // 扩展支持 ES2020 特性（如有需要）
      "moduleResolution": "node",  // 明确指定 Node.js 风格的模块解析
      "esModuleInterop": true,     // 解决 CommonJS/ESM 互操作问题
      "skipLibCheck": true,        // 跳过库类型检查（临时解决潜在冲突）
      "noImplicitAny": false,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./build",
      "types": ["node"]           // 明确加载 Node.js 类型定义
    },
    "include": ["./src/**/*"],
    "exclude": ["views", "static"]
  }